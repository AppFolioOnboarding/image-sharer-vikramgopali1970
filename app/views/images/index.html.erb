<div class="container">
  <h1 class="image-list-title">Images List</h1>
  <% @images.in_groups_of(2,false).each do |image_group| %>
    <div class="row mt-5">
      <% image_group.each do |image|%>
        <div class="col col-md-4">
          <div class="card" >
            <img width="400" class="img-card" src=<%= image.image_url %> alt="...">
            <div class="card-body">
              <% if image.tag_list.count > 0 %>
                <% image.tag_list.each do |tag| %>
                      <span class="badge badge-pill badge-dark"><%= tag %></span>
                <% end %>
              <% else %>
                  <p class="card-text text-truncate"><span>Image Url : </span><%= image.image_url %></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
